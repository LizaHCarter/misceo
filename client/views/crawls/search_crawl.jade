h2#Crawlh2 {{mode | uppercase}}
.row#crawlsRow
  .small-1.large-1.columns
  .small-3.large-3.columns#formWrap
    form(role='form', novalidate, name='crawlForm')
      h5 Crawl Name:
      label#nameLabel(for='name')
        input.form-control#crawlName(type='text', name='name', ng-model='crawl.name', autofocus)
      h5 Enter URL:
      .row.collapse
        .small-3.large-2.columns
        .small-9.large-10.columns
          input#crawlUrl(type='text', placeholder='Enter your URL...', ng-model='crawl.baseUrl')
      label
        h5 Select Depth:
        select(ng-model='crawl.depth')
          option(value='1') 1
          option(value='2') 2
          option(value='3') 3
      button.btn(ng-click='submit()') Crawl the Web
  .small-1.large-3.columns
  .small-4.large-3.columns#centerSearch
    //.formgroup#search
      h5 Search:
      label
      input.form-control.search(ng-model='query')
  .small-3.large-2.columns
.row
  .small-1.large-1.columns
  .small-10.large-10.columns
    h2#savedCrawls Saved Crawls
    table
      thead
        th Delete
        th Crawl Name
        th URL Crawled
        th # of Images
      tbody(ng-repeat='crawl in crawls | filter:query')
        tr
          td(ng-show="crawl.email === email", ng-click='deleteCrawl(crawl._id)') Delete
          td(ng-click='join=true') {{crawl.name}}
          td {{crawl.url}}
          td
  .small-1.large-1.columns