.section-header.eight.columns.centered
  h1 {{mode | uppercase}}
.panel
  .row
    .small-12.columns
      form
        .row
          .small-6.columns
            label(for='email') Email
            input#name(type='text', name='email', ng-model='user.email', autofocus)
          .small-6.columns
        .row(ng-hide='hideUsername')
          .small-6.columns
            label(for='name') Username
            input#name(type='text', name='name', ng-model='user.name', autofocus)
          .small-6.columns
        .row
          .small-6.columns
            label(for='password') Password
            input#password(type='password', name='password', ng-model='user.password')
          .small-6.columns
      .row
        .small-6.columns
          a.btn.btn-primary.btn-medium.btn-raised(ng-click='submit()') Submit
        .small-6.columns
